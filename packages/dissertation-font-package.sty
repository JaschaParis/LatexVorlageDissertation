\ProvidesPackage{dissertation-font-package}[2020/01/01]

% There is a separate font package so that it can be included in both Tikz and the main dissertation document.

%% START Font choices
% Times for rm and math | Helvetica for ss | Courier for tt
\usepackage{newtxtext,newtxmath}        % rm & math
\usepackage{newtxtext}                  % rm & math
\usepackage[scaled=0.90]{helvet}        % ss
\usepackage{courier}                    % tt
%% END Font choices

\RequirePackage[T1]{fontenc}            % T1-encoded fonts
\RequirePackage[final,activate,verbose=warnings,auto=true,babel]{microtype} % Improved typography


%% Math Mode
\RequirePackage[intlimits]{mathtools}   % For equations; is loading amsmath
\RequirePackage{mathrsfs}
%\RequirePackage{amssymb}               % @ToDo: Not required in TexLive 2020?
\RequirePackage{amsxtra}

\newcommand\bmmax{2}
\RequirePackage{bm}	                    % Bold font for matrizes and vectors
\RequirePackage{ziffer}
\RequirePackage{siunitx}                % Package for SI Units
\sisetup{locale=DE}
\sisetup{per-mode = fraction}
\sisetup{range-phrase = -}
\sisetup{range-units = single}
\sisetup{detect-all}
\RequirePackage[b]{esvect}
\RequirePackage{accents}
\allowdisplaybreaks

%% Custom Math Commands 
\DeclareRobustCommand{\bunderline}[2][4]{\underline{#2\mkern-#1mu}\mkern#1mu }
\DeclareRobustCommand{\wfrac}[2]{\frac{\medspace #1 \medspace}{\medspace #2 \medspace}}
\DeclareRobustCommand*\dif{\mathop{}\!\mathrm{d}}                           % d in Differenzen
\DeclareRobustCommand*\diag{\mathop{}\!\mathrm{diag}}                       % Diagonal matrizes
\DeclareRobustCommand*\scos[1]{\mathop{}\!\mathrm{c}_{#1}}                  % Abbreviated Cosine
\DeclareRobustCommand*\ssin[1]{\mathop{}\!\mathrm{s}_{#1}}                  % Abbreviated Sine
\DeclareRobustCommand*\jj{\operatorname*{j}}                                % Complex Number
\DeclareRobustCommand*\ii{\operatorname*{i}}                                % Complex Number
\DeclareRobustCommand{\vec}[1]{\ensuremath{\protect\vv{#1}}}                % Custom Vector
\DeclareRobustCommand{\vecind}[2]{\ensuremath{\vv{#1}_{\hspace{-2pt}#2}}}   % Vector with index
\DeclareRobustCommand{\vind}[1]{\ensuremath{_{\hspace{-2pt}#1}}}
\DeclareRobustCommand{\vecnorm}[1]{\ensuremath{\left\| #1 \right\|_2}}      % Vector norm
\DeclareRobustCommand{\mat}[1]{\ensuremath{\mathbf{#1}}}                    % Custom matrix
\DeclareRobustCommand{\cx}[1]{\ensuremath{\bunderline[2]{#1}}}
\DeclareRobustCommand{\KOS}[2]{\ensuremath{\prescript{#1}{}{#2}}}
\DeclareRobustCommand{\tind}[1]{\ensuremath{_\textit{#1}}}                  % Textindex
\DeclareRobustCommand{\abs}[1]{\ensuremath{\left| {#1} \right| }}           % Absolute value
\DeclareRobustCommand{\overbar}[1]{\mkern 1.5mu\overline{\mkern-1.5mu#1\mkern-1.5mu}\mkern 1.5mu}
\DeclareMathOperator{\sgn}{sgn}