% Define command to get xy coordinates
\makeatletter
\newcommand{\gettikzxy}[3]{%
	\tikz@scan@one@point\pgfutil@firstofone#1\relax
	\edef#2{\the\pgf@x}%
	\edef#3{\the\pgf@y}%
}

% Bestimme laenge
\def\getlen#1{%
	\pgfmathsetmacro{\lenarray}{0}% 
	\foreach \i in #1{%
		\pgfmathtruncatemacro{\lenarray}{\lenarray+1}% 
		\global\let\lenarray\lenarray}%
}   
\makeatother
