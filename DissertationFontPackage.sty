%	Mathematikbefehle 
\DeclareRobustCommand{\bunderline}[2][4]{\underline{#2\mkern-#1mu}\mkern#1mu }
\DeclareRobustCommand{\wfrac}[2]{\frac{\medspace #1 \medspace}{\medspace #2 \medspace}}
\DeclareRobustCommand*\dif{\mathop{}\!\mathrm{d}} % d in Differenzen
\DeclareRobustCommand*\diag{\mathop{}\!\mathrm{diag}} % Diagonalmatrizen
\DeclareRobustCommand*\scos[1]{\mathop{}\!\mathrm{c}_{#1}} % Kurzcosinus
\DeclareRobustCommand*\ssin[1]{\mathop{}\!\mathrm{s}_{#1}} % Kurzsinus
\DeclareRobustCommand*\jj{\operatorname*{j}} % Komplexe Zahl
\DeclareRobustCommand*\ii{\operatorname*{i}} % Komplexe Zahl
\DeclareRobustCommand{\vec}[1]{\ensuremath{\protect\vv{#1}}} % Mein Vektor
\DeclareRobustCommand{\vecind}[2]{\ensuremath{\vv{#1}_{\hspace{-2pt}#2}}} % Vektor mit Index
\DeclareRobustCommand{\vind}[1]{\ensuremath{_{\hspace{-2pt}#1}}}
\DeclareRobustCommand{\vecnorm}[1]{\ensuremath{\left\| #1 \right\|_2}} %V Vektornorm
\DeclareRobustCommand{\mat}[1]{\ensuremath{\mathbf{#1}}} % Meine Matrix
\DeclareRobustCommand{\cx}[1]{\ensuremath{\bunderline[2]{#1}}}
\DeclareRobustCommand{\KOS}[2]{\ensuremath{\prescript{#1}{}{#2}}}
\DeclareRobustCommand{\tind}[1]{\ensuremath{_\textit{#1}}} % Textindex
\DeclareRobustCommand{\abs}[1]{\ensuremath{\left| {#1} \right| }} %Absolutwert
\DeclareRobustCommand{\overbar}[1]{\mkern 1.5mu\overline{\mkern-1.5mu#1\mkern-1.5mu}\mkern 1.5mu}
\DeclareMathOperator{\sgn}{sgn}